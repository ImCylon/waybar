  "group/hardware": {
    "drawer": {
      "transition-duration": 500,
      "transition-left-to-right": true,
      "click-to-reveal": true,
      "children-class": "drawer-child"
    },
    "orientation": "inherit",
    "tooltip": true,
    "modules": [
      "cpu",
      "load",
      "memory"
    ]
  },
  "cpu": {
    "interval": 2,
    "format": "CPU:{usage}% {icon}",
    "format-alt": "CPU: {usage}% {icon0}{icon1}{icon2}{icon3}{icon4}{icon5}{icon6}{icon7}{icon8}{icon9}{icon10}{icon11}{icon12}{icon13}{icon14}{icon15}",
    "format-icons": [
      "<span color='#00ff00'>‚ñÅ</span>", // verde claro
      "<span color='#33ff00'>‚ñÇ</span>",
      "<span color='#66ff00'>‚ñÉ</span>",
      "<span color='#99ff00'>‚ñÑ</span>",
      "<span color='#ccff00'>‚ñÖ</span>", // amarelado
      "<span color='#ffff00'>‚ñÜ</span>", // amarelo puro
      "<span color='#ffcc00'>‚ñá</span>", // laranja claro
      "<span color='#ff6600'>‚ñà</span>" // vermelho intenso
    ],
    "states": {
      "critical": 90
    }
  },
  "load": {
    "interval": 1,
    "format": " ‚îÉ LOAD: {load1}",
    "format-alt": " ‚îÉ LOAD: {load1} {load5} {load15}"
  },
  "memory": {
    "interval": 30,
    "format": "‚îÉ MEM: {used:0.1f}G/{total:0.1f}G"
  },
  "group/audio": {
    "drawer": {
      "transition-duration": 500,
      "transition-left-to-right": true,
      "click-to-reveal": true,
      "children-class": "drawer-child"
    },
    "orientation": "inherit",
    "tooltip": true,
    "modules": [
      "pulseaudio",
      "bluetooth"
    ]
  },
  "custom/spotify": {
    "format": "{}",
    "escape": true,
    "return-type": "json",
    "max-length": 30,
    "on-click": "playerctl -p spotify play-pause",
    "on-click-right": "killall spotify",
    "smooth-scrolling-threshold": 10,
    "on-scroll-up": "playerctl -p spotify next",
    "on-scroll-down": "playerctl -p spotify previous",
    "exec": "/home/imcylon/.dotfiles/waybar/scripts/mediaplayer.py",
    "exec-if": "pgrep spotify"
  },
  "custom/media": {
    "format": "ÔÜº {}",
    "escape": true,
    "return-type": "json",
    "max-length": 20,
    "on-click": "playerctl play-pause",
    "on-click-right": "playerctl -l",
    "smooth-scrolling-threshold": 10, // This value was tested using a trackpad, it should be lowered if using a mouse.
    "on-scroll-up": "playerctl next",
    "on-scroll-down": "playerctl previous",
    "exec": "/home/imcylon/.dotfiles/waybar/scripts/mediaplayer.py" // Script in resources/custom_modules folder
  },
  //"custom/cpu_history": {
